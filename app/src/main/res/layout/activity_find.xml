<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/find">

    <include layout="@layout/footer" />
    <include layout="@layout/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/daily_logger"
        tools:context=".DailyLogger"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Room:"/>


            <Spinner
                android:id="@+id/room_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="20sp"/>


        </LinearLayout>
        <!--need to add imageView of current room-->

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_below="@+id/layout1"
            android:layout_height="300dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            >

            <com.sniffit.sniffit.Activities.MapView
                android:id="@+id/find_view_room"
                android:layout_width="fill_parent"
                android:layout_height= "wrap_content"
                />
            <TextView
                android:id="@+id/no_rooms"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="invisible"
                android:text="No rooms in database; go to ROOMS tab"
                android:textSize="20dp"
                android:textStyle="italic"
                android:gravity="center"
                />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout3"
            android:layout_below="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >

            <TextView
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@id/room"
                android:textSize="20sp"
                android:text="Item:"/>


            <Spinner
                android:id="@+id/item_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_below="@id/room_spinner"
                android:textSize="20sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout3"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingBottom="5dp"
            android:layout_centerInParent="true"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/sniff_button"
                android:text="Find"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:shadowRadius="1" />



        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
